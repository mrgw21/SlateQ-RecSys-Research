{
    "name": "SlateQ-RecSys",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "features": {
      "ghcr.io/devcontainers/features/python:1": {
        "version": "3.10"
      },
      "ghcr.io/devcontainers/features/apt-packages:1": {
        "packages": [
          "libsdl2-dev",
          "libsdl2-image-dev",
          "libsdl2-mixer-dev",
          "libsdl2-ttf-dev"
        ]
      }
    },
    "postCreateCommand": "python3.10 -m venv .venv && source .venv/bin/activate && pip install -r requirements.txt",
    "settings": {
      "python.defaultInterpreterPath": "/usr/local/bin/python3.10"
    },
    "customizations": {
      "vscode": {
        "extensions": ["ms-python.python"]
      }
    }
  }  